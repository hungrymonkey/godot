# SCsub
Import('env')


sources = [
    "register_types.cpp",
    "mumble.cpp"
    "callback.cpp"
]
thirdparty_dir = "#thirdparty/mumlib/"

third_party_includes = [
    "include",
    "include/mumlib"
]
third_party_sources = [
    "src/Audio.cpp",
    "src/Callback.cpp",
    "src/CrypState.cpp",
    "src/Transport.cpp",
    "src/VarInt.cpp",
    "src/mumlib.cpp"
]

module_env = env.Clone()
module_env.Append(CPPPATH=[ thirdparty_dir + "/" + dir for dir in third_party_includes])
module_env.add_source_files(env.modules_sources, [ thirdparty_dir + '/' + dir for dir in third_party_sources ])
module_env.add_source_files(env.modules_sources,"*.cpp")
module_env.Append(CXXFLAGS=['-O2', '-std=c++11'])
